@{
    ViewData["Title"] = "Кoмпании";
}


<h3>Компании</h3>
<body>
    <div class="container-full">
        <div class="row">
            <div class="col-xs-4">
                <button id="btnAdd" type="button" class="btn btn-default">Добавить</button>
            </div>
        </div>
        <div class="row" style="margin-top: 10px">
            <div class="col-xs-12">
                <table id="grid"></table>
            </div>
        </div>
    </div>

    <div id="dialog" style="display: none">
        <input type="hidden" id="ID" />
        <form id="companyForm">
            <div class="form-group">
                <label for="Name">Наименование</label>
                <input type="text" class="form-control" id="Name" name="nameField">
            </div>
            <div class="form-group">
                <label for="Inn">ИНН</label>
                <input type="text" class="form-control" id="Inn" name="innField"/>
            </div>
            <div class="form-group">
                <label for="Address">Адрес</label>
                <input type="text" class="form-control" id="Address" name="addressField" />
            </div>
            <button type="button" id="btnSave" class="btn btn-default">Сохранить</button>
            <button type="button" id="btnCancel" class="btn btn-default">Отмена</button>
        </form>
    </div>

    <script src="~/js/company.js" asp-append-version="true"></script>
</body>

